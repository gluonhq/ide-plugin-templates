<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@cloudlink.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane prefHeight="350.0" prefWidth="400.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="225.0" minWidth="10.0" prefWidth="96.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="464.0" minWidth="6.0" prefWidth="464.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="userText" promptText="Email" GridPane.columnIndex="1" />
            <PasswordField fx:id="passText" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <HBox alignment="CENTER_LEFT" GridPane.columnSpan="2" GridPane.rowIndex="2">
               <children>
                  <CheckBox fx:id="rememberCheck" mnemonicParsing="false" selected="true" text="Remember Me" />
                  <Pane HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label fx:id="errorLabel" text="The provided credentials are invalid" textFill="RED" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            <Label fx:id="userLabel" styleClass="icon" text="User" GridPane.halignment="CENTER" />
            <Label fx:id="passLabel" styleClass="icon" text="Password" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <HBox alignment="CENTER" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
               <children>
                  <Label prefHeight="25.0" prefWidth="188.0" text="No Gluon Dashboard account?" />
                  <Hyperlink fx:id="signUpLink" text="Sign Up" />
               </children>
            </HBox>
            <Hyperlink fx:id="lostPassLink" prefHeight="73.0" prefWidth="138.0" text="Lost your password?" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
         </children>
         <padding>
            <Insets left="40.0" right="40.0" top="20.0" />
         </padding>
      </GridPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel" />
            <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" text="Sign In" />
        </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <top>
      <Label maxWidth="1.7976931348623157E308" prefHeight="50.0" styleClass="title" text="CloudLink Account" BorderPane.alignment="CENTER" />
   </top>
</fx:root>
